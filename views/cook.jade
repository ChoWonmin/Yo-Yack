extends layout
block content

    .cook-wrap(id="#{cook.id}")
        .article
            .articleImage
                img(src="/images/main/#{cook.id}.jpg")
            .articleContent
                h1 #{cook.name}

                h2 소요시간
                p #{cook.time}

                - var kcal = cook.kcal
                - if(kcal=='NA') kcal = ' 칼로리 정보 없음 '
                h2 Kcal
                p #{kcal}

                h2 주재료
                p #{cook.ingredient_main}

        .recipe
            .method
                h1 조리순서

        .button-wrap
            .start-btn

    - for (var i = 0 ; i < cook.process.length ; i++)
        //.process-wrap(index='#{i}')
          //  img(src="/images/process/#{cook.id}_#{i+1}.jpg")
            //.descript #{cook.process[i]}

    link(rel='stylesheet', href='/stylesheets/cook.css')
    script(src='/cook.js')
